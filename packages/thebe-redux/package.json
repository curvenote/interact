{
  "name": "thebe-redux",
  "version": "0.0.1",
  "description": "A redux connector library for thebe-core",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build:cjs": "tsc --project ./tsconfig.json",
    "dev": "npm run build:cjs -- -w",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll --runInBand"
  },
  "author": "Steve Purves <steve@curvenote.com>",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.5",
    "thebe-core": "^0.0.13"
  },
  "devDependencies": {
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.3",
    "ts-jest": "^28.0.8"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/empty.js"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
